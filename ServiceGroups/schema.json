{
  "definitions": {},
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/root.json",
  "type": "object",
  "required": [
    "parameters",
    "services"
  ],
  "properties": {
    "parameters": {
      "$id": "#/properties/parameters",
      "type": "object",
      "required": [
        "serviceGroup",
        "tags"
      ],
      "properties": {
        "serviceGroup": {
          "$id": "#/properties/parameters/properties/serviceGroup",
          "type": "string",
          "title": "The service group name",
          "default": "",
          "enum": [
            "Backend",
            "Frontend",
            "Management"
          ],
          "examples": [
            "Backend"
          ],
          "pattern": "^(.*)$"
        },
        "tags": {
          "$id": "#/properties/parameters/properties/tags",
          "type": "object",
          "title": "The Tags",
          "required": [
            "ServiceGroup",
            "CostCenter"
          ],
          "properties": {
            "ServiceGroup": {
              "$id": "#/properties/parameters/properties/tags/properties/Service Group",
              "type": "string",
              "title": "The service group name",
              "default": null,
              "examples": [
                "Management"
              ]
            },
            "CostCenter": {
              "$id": "#/properties/parameters/properties/tags/properties/Cost Center",
              "type": "string",
              "title": "The cost center indicator",
              "default": null,
              "examples": [
                "Front Office"
              ]
            }
          }
        }
      }
    },
    "services": {
      "$id": "#/properties/services",
      "type": "array",
      "title": "The Services Schema",
      "items": {
        "$id": "#/properties/services/items",
        "type": "object",
        "required": [
          "name",
          "shortName",
          "roles",
          "resourceGroup"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/services/items/properties/name",
            "type": "string",
            "title": "The Application Name",
            "default": "",
            "examples": [
              "Identity Provider"
            ],
            "pattern": "^(.*)$"
          },
          "shortName": {
            "$id": "#/properties/services/items/properties/shortName",
            "type": "string",
            "title": "The Shortname of the application",
            "default": "",
            "examples": [
              "idsvr"
            ],
            "pattern": "^(.*)$"
          },
          "roles": {
            "$id": "#/properties/services/items/properties/roles",
            "type": "object",
            "title": "The Roles"
          },
          "resourceGroup": {
            "$id": "#/properties/services/items/properties/resourceGroup",
            "type": "object",
            "title": "The Resourcegroup",
            "required": [
              "tags",
              "sequence"
            ],
            "properties": {
              "tags": {
                "$id": "#/properties/services/items/properties/resourceGroup/properties/tags",
                "type": "object",
                "title": "The Tags"
              },
              "sequence": {
                "$id": "#/properties/services/items/properties/resourceGroup/properties/sequence",
                "type": "integer",
                "title": "The Sequence",
                "default": 0,
                "examples": [
                  1
                ]
              }
            }
          }
        }
      }
    }
  }
}